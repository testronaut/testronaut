{
  "name": "angular-wide",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "tests/angular-wide/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tests/angular-wide",
        "index": "tests/angular-wide/src/index.html",
        "browser": "tests/angular-wide/src/main.ts",
        "tsConfig": "tests/angular-wide/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "tests/angular-wide/public"
          }
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        },
        "testronaut": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "browser": "tests/angular-wide/testronaut/main.ts",
          "index": "tests/angular-wide/testronaut/index.html",
          "tsConfig": "tests/angular-wide/testronaut/tsconfig.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "angular-wide:build:production"
        },
        "development": {
          "buildTarget": "angular-wide:build:development"
        },
        "testronaut": {
          "buildTarget": "angular-wide:build:testronaut"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "angular-wide:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "angular-wide:build",
        "port": 4200,
        "staticFilePath": "dist/{projectRoot}/browser",
        "spa": true
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --noEmit -p {projectRoot}/tsconfig.pw.json",
          "tsc --noEmit -p {projectRoot}/tsconfig.spec.json"
        ]
      }
    },
    "e2e": {
      /* Using custom command instead of plugin due to chicken and egg situation
       * where plugin loads playwright config which needs a built version of our packages
       * and we need to load the nx graph to be able to build the packages. */
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "playwright test",
          "playwright test --config=playwright.failing-multi-worker.config.ts",
          /* Test commonjs support. */
          "playwright test --config=playwright.config.cts"
        ],
        "cwd": "{projectRoot}",
        "parallel": false
      }
    }
  }
}
